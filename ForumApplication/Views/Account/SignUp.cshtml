@using System.Web.Optimization
@model ForumApplication.Models.ViewModels.SignUpView

<div class="row signup-form">
    <div class="col-lg-4 col-lg-offset-4">
        @using (Html.BeginForm("SignUp", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.Login)
                @Html.EditorFor(m => m.Login, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Login, string.Empty, new {@class = "text-danger"})
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Nickname)
                @Html.EditorFor(m => m.Nickname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Nickname, string.Empty, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password)
                @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Password, string.Empty, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.EditorFor(m => m.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, string.Empty, new { @class = "text-danger" })
            </div>

            <input type="file" name="avatar" id="selectedFile" style="display: none;" />
            <div class="input-group">
                <input type="text" value="" class="form-control" id="file-path" readonly />
                <span class="input-group-btn">
                    <input type="button" class="btn btn-warning" value="Browse Avatar" onclick="document.getElementById('selectedFile').click();">
                </span>
            </div>
            <div class="holder-btn">
                <input type="submit" value="Sign up" class="btn btn-warning" />
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}